<div class= "row">
<div class= "col-9">
<table class="table table-striped table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @friend_lists.each do |friend| %>
    <tr>
      <th scope="row"><%= friend.email %></th>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td>
      <%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-success' %>
      <%= link_to 'Stop following Friend', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure you want to unfollow friend?'}, class: 'btn btn-sm btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>