<div class= "row">
<div class= "col-9">
<table class="table table-striped table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Sticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @tracked_stocks.each do |stock| %>
    <tr>
      <th scope="row"><%= stock.sticker%></th>
      <td><%= stock.name %></td>
      <td><%= stock.last_price %></td>
      <td><% if current_user.can_track_stock?(stock.sticker) %>
        <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, sticker: stock.sticker), class: "btn btn-xs btn-success", method: :post %>
          <% elsif current_user.id != @user.id %>
          <span class="badge badge-secondary">
                    You are already tracking
            <% if !current_user.under_stock_limit? %>
                      10 stocks
             <% end %>
            <% if current_user.stock_already_tracked?(stock.sticker) %>
                      this stock
            <% end %>
                  </span>
            <% end %>
          <% if current_user.id == @user.id %>
          <%= link_to 'Remove', user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-warning' %>
        <% end %>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>